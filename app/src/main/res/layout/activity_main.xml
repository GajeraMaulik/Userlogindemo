<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".MainActivity">
    <TextView android:id="@+id/userName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentStart="true" android:layout_alignParentEnd="true" android:layout_marginStart="31dp" android:layout_marginTop="@dimen/_50sdp" android:textAlignment="center" android:layout_marginEnd="36dp" android:text="Hello" android:textColor="@color/black" android:textSize="@dimen/_15sdp"/>
    <Button android:id="@+id/logOut" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/userName" android:layout_marginTop="@dimen/_10sdp" android:layout_marginStart="@dimen/_25sdp" android:text="logout" android:textAlignment="center" android:layout_alignParentStart="true" android:layout_alignEnd="@id/userName"/>
    <ImageView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/logOut"
        android:layout_alignStart="@+id/userName"
        android:layout_alignEnd="@id/userName"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user"/>

    <Button android:id="@+id/pickImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/preview"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_alignEnd="@id/userName"
        android:text="Select Image"/>

    <Button android:id="@+id/upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pickImage"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@id/userName"
        android:text="upload"/>

    <Button
        android:id="@+id/getAllPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upload"
        android:onClick="getAllPost"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@id/userName"
        android:text="getAllPost"
        tools:ignore="MissingConstraints,OnClick"/>

    <Button
        android:id="@+id/getUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/getAllPost"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@id/userName"
        android:text="getUsers"
        tools:ignore="MissingConstraints,OnClick"/>

</RelativeLayout>