<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_bar"
        tools:ignore="UnknownId">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="@dimen/_50sdp"
        android:textAlignment="center"
        android:layout_marginEnd="36dp"
        android:text="Hello"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:text="logout"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@id/userName"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/logOut"
        android:layout_alignStart="@+id/userName"
        android:layout_alignEnd="@id/userName"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user"
        tools:ignore="MissingConstraints" />

    <Button android:id="@+id/pickImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/preview"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_alignEnd="@id/userName"
        android:text="Select Image"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pickImage"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@id/userName"
        android:text="upload"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/getAllPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upload"
        android:onClick="getAllPost"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@id/userName"
        android:text="getAllPost"
        tools:ignore="MissingConstraints,OnClick"/>

    <Button
        android:id="@+id/getUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/getAllPost"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@id/userName"
        android:text="getUsers"
        tools:ignore="MissingConstraints,OnClick"/>

    <Button
        android:id="@+id/getReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/getUsers"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@id/userName"
        android:text="getReport"
        tools:ignore="MissingConstraints,OnClick"/>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>